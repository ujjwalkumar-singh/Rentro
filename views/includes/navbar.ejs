<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    .navbar {
      background-color: white;
    }

    .btn-search {
      background-color: #fe424d;
      color: white;
      border-radius: 25px;
      padding: 0 1rem 0 1rem;
    }

    .btn-search:hover {
      background-color: #fe424d;
      color: white;
    }

    .btn-search i {
      display: inline;
    }

    /* Desktop */
    @media (min-width: 768px) {
      .search-form {
        width: 350px;
        /* adjust size here */
      }
    }

    /* Mobile */
    @media (max-width: 767px) {
      .search-form {
        width: 100%;
      }
    }
  </style>

</head>

<body>

  <nav class="navbar navbar-expand-md border-bottom sticky-top">
    <div class="container-fluid">

      <!-- Logo -->
      <a class="navbar-brand" href="/">
        <i class="fa-regular fa-compass"></i>
      </a>

      <!-- Hamburger -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapse Wrapper (ONLY ONE) -->
      <div class="collapse navbar-collapse" id="mainNavbar">

        <!-- Left -->
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>

        <!-- Center Search -->
        <form method="GET" action="/listings/loc" class="d-flex mx-md-auto my-2 my-md-0 search-form" role="search">
          <input name="location" class="form-control me-2" type="search" placeholder="Search Destination">
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>

        <!-- Right -->
        <div class="navbar-nav ms-md-auto">
          <a class="nav-link" href="/listings/new">Add new Listing</a>

          <% if(!currentUser){ %>
            <a class="nav-link" href="/signup"><b>SignUp</b></a>
            <a class="nav-link" href="/login"><b>Log In</b></a>
            <% } %>

              <% if(currentUser){ %>
                <a class="nav-link" href="/logout"><b>Log Out</b></a>
                <% } %>
        </div>

      </div>
    </div>
  </nav>

</body>

</html>