<% layout('/layouts/boilerplate') -%>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Edit your List</h3>
            <form method="POST" action="/listings/<%= item._id %>?_method=PUT" class="needs-validation" novalidate
                enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= item.title %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter title
                    </div>
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <textarea name="listing[description]" type="text" class="form-control"
                        required><%= item.description %></textarea>
                    <div class="invalid-feedback">
                        Enter desdription
                    </div>
                </div>
                <div class="mb-3">
                    Original Image
                    <br>
                    <img src="<%=originalImageurl%>">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload new Image</label>
                    <input name="listing[image]" type="file" class="form-control">
                    <div class="invalid-feedback">
                        upload image link
                    </div>
                </div>

                <div class="row ">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" value="<%= item.price %>"" type=" number" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            enter price
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label"> Location</label>
                        <input name="listing[location]" value="<%= item.location %>" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Enter location
                        </div>
                    </div>
                </div>

                <div class="mb-3 ">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" value="<%= item.country %>" type="text" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        enter country
                    </div>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Select Category</label>
                    <select name="listing[category]" class="form-control" required>
                        <option>trending</option>
                        <option>rooms</option>
                        <option>cities</option>
                        <option>amazingpools</option>
                        <option>beach</option>
                        <option>mountains</option>
                        <option>nativeBuffer</option>
                        <option>luxury</option>
                         <option>family</option>
                        <option>pet</option>
                    </select>
                </div>

                <button class="btn btn-dark edit-btn">Update</button>

            </form>
        </div>
    </div>