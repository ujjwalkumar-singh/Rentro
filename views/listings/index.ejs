<% layout("/layouts/boilerplate")%>

    <!-- <h1>All lsit of hotels are: </h1> -->
    <!-- <form method="GET" action="/listings/new">
        <button>Create New</button>
    </form> -->
    <style>
        body {
            overflow-x: hidden;
        }

        #filters {

            display: flex;
            width: fit-content;
        }

        .filter {
            text-align: center;
            margin-right: 1.5rem;
            margin-top: 2rem;
            opacity: 0.7;
            color: black;
            text-decoration: none;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .gst {
            display: none;
        }

        .tax-toggle {
            margin-top: 1rem;
            padding: 10px;
            border: 2px solid black;
            border-radius: 1rem;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Mobile Fix */
        @media (max-width: 768px) {
            .tax-toggle {
                margin: 1rem auto;
                /* center it */
                width: 95%;
                /* take full width nicely */
                max-width: 400px;
            }
        }


        .empty-alert {
            border-radius: 20px;
            padding: 20px;
            border: 2px solid black;
            margin: 3rem auto;
            background-color: #fe424d;
            color: white;
            text-align: center;
            max-width: 500px;
            width: 90%;
        }

        .empty-alert-2 {
            border-radius: 20px;
            padding: 20px;
            border: 2px solid black;
            margin: 3rem auto;
            text-align: center;
            max-width: 500px;
            width: 90%;
        }


        #filters {
            display: flex;
            gap: 1.5rem;
            overflow-x: auto;
            width: 100%;
            max-width: 100%;
            white-space: nowrap;
            padding: 0.5rem 0;
        }

        #filters::-webkit-scrollbar {
            display: none;
            /* Chrome */
        }

        .filter {
            flex: 0 0 auto;
        }


        .top-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        @media (max-width: 768px) {
            .top-item {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                /* width: 100%; */
            }

        }

        /* Smooth transition */
        .filter {
            transition: 0.2s ease-in-out;
        }

        /* Active state */
        .active-filter i,
        .active-filter p {
            color: #fe424d !important;
            opacity: 1;
            font-weight: 600;
        }
    </style>
    <div>
        <div class="top-item">
            <div id="filters">
                <% const categories=[ { name: "Trending" , value: "trending" , icon: "fa-fire" }, { name: "Rooms" ,
                    value: "rooms" , icon: "fa-bed" }, { name: "Cities" , value: "cities" , icon: "fa-mountain-city" },
                    { name: "Mountains" , value: "mountains" , icon: "fa-mountain" }, { name: "Amazing Pools" ,
                    value: "amazingpools" , icon: "fa-person-swimming" }, { name: "Beach" , value: "beach" ,
                    icon: "fa-umbrella-beach" }, { name: "Nature" , value: "nature" , icon: "fa-leaf" }, {
                    name: "Luxury" , value: "luxury" , icon: "fa-gem" }, { name: "Family" , value: "family" ,
                    icon: "fa-children" }, { name: "Pet Friendly" , value: "pet" , icon: "fa-dog" } ]; %>

                    <% categories.forEach(cat=> { %>
                        <a href="/listings/filter?category=<%= cat.value %>"
                            class="filter <%= selectedCategory === cat.value ? 'active-filter' : '' %>">
                            <div>
                                <i class="fa-solid <%= cat.icon %>"></i>
                            </div>
                            <p>
                                <%= cat.name %>
                            </p>
                        </a>
                        <% }) %>

            </div>


            <div class="tax-toggle">
                <div class="form-check form-switch form-check-reverse">
                    <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                    <label class="form-check-label" for="switchCheckReverse">Display Total Price After Taxes</label>
                </div>
            </div>

        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <!-- <div class="row row-cols-2 row-cols-md-2 row-cols-lg-3 mt-3"></div> -->
            <% if (list.length==0) { %>
                <h2 class="empty-alert">There is no such place which you are finding...</h2>
                <h2 class="empty-alert-2"> Try searching with different keyword or category</h2>
                <% } %>

                    <%for(let each of list){%>
                        <a href="/listings/<%=each.id%>" class="listing-links">
                            <div class="card col listing-card">
                                <img src="<%=each.image.url%>" class="card-img-top" alt="Listing image"
                                    style="height:18rem;">
                                <div class="card-img-overlay"></div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <b>
                                            <%= each.title %>
                                        </b>
                                        <br>
                                        price:&#8377;<%= each.price.toLocaleString("en-IN") %>
                                            <i class="gst">&nbsp;+18%GST</i>
                                    </p>
                                </div>
                            </div>
                        </a>
                        <%}%>
        </div>
    </div>
    <script>
        let taxSwitch = document.getElementById("switchCheckReverse")
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("gst")
            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline"
                }
                else {
                    info.style.display = "none"
                }
            }

        })

    </script>