                    icon: "fa-umbrella-beach" }, { name: "Nature" , value: "nature" , icon: "fa-leaf" }, {
                    name: "Luxury" , value: "luxury" , icon: "fa-gem" }, { name: "Family" , value: "family" ,
                    icon: "fa-children" }, { name: "Pet Friendly" , value: "pet" , icon: "fa-dog" } ]; %>

                    <% categories.forEach(cat=> { %>
                        <a href="/listings/filter?category=<%= cat.value %>" class="filter">
                            <div>
                                <i class="fa-solid <%= cat.icon %>"></i>
                            </div>
                            <p>
                                <%= cat.name %>
                            </p>
                        </a>
                        <% }) %>

            </div>


            <div class="tax-toggle">
                <div class="form-check form-switch form-check-reverse">
                    <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                    <label class="form-check-label" for="switchCheckReverse">Display Total after taxes</label>
                </div>
            </div>

        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% if (list.length==0) { %>
                <h2 class="empty-alert">There is no such place which you are finding...</h2>
            <% } %>

                    <%for(let each of list){%>
                        <a href="/listings/<%=each.id%>" class="listing-links">
                            <div class="card col listing-card">
                                <img src="<%=each.image.url%>" class="card-img-top" alt="Listing image"
                                    style="height:18rem;">
                                <div class="card-img-overlay"></div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <b>
                                            <%= each.title %>
                                        </b>
                                        <br>
                                        price:&#8377;<%= each.price.toLocaleString("en-IN") %>
                                            <i class="gst">&nbsp;+18%GST</i>
                                    </p>
                                </div>
                            </div>
                        </a>
                        <%}%>
