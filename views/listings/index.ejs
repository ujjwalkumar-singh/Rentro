                <% const categories=[ { name: "Trending" , value: "trending" , icon: "fa-fire" }, { name: "Rooms" ,
                    value: "rooms" , icon: "fa-bed" }, { name: "Cities" , value: "cities" , icon: "fa-mountain-city" },
