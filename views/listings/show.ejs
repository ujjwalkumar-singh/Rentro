        <div class="col-8 offset-2">
            <h3>item details: </h3>
        </div>

        <div class="card col-6 offset-2 listing-card">
            <img src="<%=item.image.url%>" class="card-img-top show-img" alt="listing-image">
            <div class="card-body">
                <p class="card-text"><b>
                        <%=item.title%>
                    </b></p>
                <br>
                <p class="card-text">Owned By:<i>
                        <%=item.owner.username%>
                    </i></p>
                <p>
                    <%=item.description%>
                </p>

                <p>price:&#8377;<%= item.price.toLocaleString("en-In")%>
                </p>

                <p> location:<%=item.location%>
                </p>

                <p>country:<%=item.country%>
                </p>

            </div>
        </div>
