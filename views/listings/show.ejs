<% layout('/layouts/boilerplate') -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>item details: </h3>
        </div>

        <div class="card col-6 offset-2 listing-card">
            <img src="<%=item.image.url%>" class="card-img-top show-img" alt="listing-image">
            <div class="card-body">
                <p class="card-text"><b>
                        <%=item.title%>
                    </b></p>
                <br>
                <p class="card-text">Owned By:<i>
                        <%=item.owner.username%>
                    </i></p>
                <p>
                    <%=item.description%>
                </p>

                <p>price:&#8377;<%= item.price.toLocaleString("en-In")%>
                </p>

                <p> location:<%=item.location%>
                </p>

                <p>country:<%=item.country%>
                </p>

            </div>
        </div>
        <!-- <ul>
            <li>Title:<%=item.title%>
            </li>
            <li>description:<%=item.description%>
            </li>

            <li>price:&#8377;<%= item.price.toLocaleString("en-In")%>
            </li>
            <li>location:<%=item.location%>
            </li>

            <li>country:<%=item.country%>
            </li>


        </ul> -->

        <div style=" display: flex; justify-content: space-between;width: 50%; margin-left: 220px;">
            <form action="/listings/<%=item._id%>/edit" method="GET">
                <button class="btn btn-warning">Upadate details</button>
            </form>
            <form method="POST" action="/listings/<%=item._id%>?_method=DELETE">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>


        <div class="col-8 offset-2 mb-3 mt-3">
            <hr>
            <h4>Leave a review</h4>
            <form action="/listings/<%=item._id%>/reviews" method="POST" class="needs-validation" novalidate>
                <!-- <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
                </div> -->
                <fieldset class="starability-slot">
                    <legend>First rating:</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                        aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                <div>
                    <label for="comment" class="form-label">comments</label>
                    <textarea col="30" rows="5" id="comment" name="review[comment]" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">
                        please sumbit some comment
                    </div>
                </div>
                <button class="btn btn-outline-dark mt-3">Submit</button>
            </form>
        </div>
        <hr />

        <p><b>All Reviews</b></p>
        <div class="row">
            <% for( ele of item.reviews) { %>
                <div class="card col-5 mb-3 ms-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=ele.owner.username%>
                        </h5>
                        <p class="card-text">
                            <%=ele.comment%>
                        </p>

                        <!-- <p class="card-text">
                            <%=ele.rating%> Stars
                        </p> -->
                        <p class="starability-result " data-rating="<%=ele.rating%>">
                          
                        </p>
                    </div>
                    <form class="mb-3" method="POST"
                        action="/listings/<%=item._id%>/reviews/<%=ele._id%>?_method=DELETE">
                        <button class="btn btn-sm btn-dark ">Delete</button>
                    </form>
                </div>
                <% } %>
        </div>
    </div>